<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_ac_hdmi_nosignal_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="64sp"
        tools:text="NO HDMI" />

    <RelativeLayout
        android:id="@+id/home_ac_hdmi_textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/debugViewHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="200px">

        <TextView
            android:id="@+id/textViewHDMIStateLabel"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="#bf000000"
            android:padding="10dp"
            android:text="STATE"
            android:textAlignment="center"
            android:textColor="#f9a825"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewHDMIState"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewHDMIStateLabel"
            android:layout_below="@+id/textViewHDMIStateLabel"
            android:background="#7f000000"
            android:padding="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewHDMIMsgLabel"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/textViewHDMIStateLabel"
            android:background="#bf000000"
            android:padding="10dp"
            android:text="MESSAGES"
            android:textAlignment="center"
            android:textColor="#f9a825"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewHDMIMsg"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewHDMIMsgLabel"
            android:layout_below="@+id/textViewHDMIMsgLabel"
            android:background="#7f000000"
            android:padding="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="visible"
            android:alpha="1.0"/>


        <TextView
            android:id="@+id/textViewHDMIErrLabel"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/textViewHDMIMsgLabel"
            android:background="#bf000000"
            android:padding="10dp"
            android:text="ERRORS"
            android:textAlignment="center"
            android:textColor="#f9a825"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewHDMIErr"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewHDMIErrLabel"
            android:layout_below="@+id/textViewHDMIErrLabel"
            android:background="#7f000000"
            android:padding="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/phyStatusIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="40px"
            android:src="@drawable/hdmion" />

    </RelativeLayout>

</RelativeLayout>
