<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/lightweight_listview_selector"
    android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_wifi_level_unlocked"
            android:src="@drawable/wifi_level_unlocked"
            android:layout_marginRight="15dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/wifi_list_elem_ssid"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:layout_weight="1"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_wifi_connected"
            android:src="@drawable/ic_action_star"
            />


</LinearLayout>