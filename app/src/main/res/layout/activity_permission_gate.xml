<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/OGDARKGRAY"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200px"
        android:layout_weight="1"
        android:src="@drawable/ourglass_logo" />

    <TextView
        android:id="@+id/permissionMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="60px"
        android:text="---" />

    <TextView
        android:id="@+id/permissionSubMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/permissionMessageTV"
        android:layout_centerHorizontal="true"
        android:text="These permissions are required for operation!"
        android:textSize="40px" />

</RelativeLayout>
